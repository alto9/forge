{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/naming-convention": "off",
    "@typescript-eslint/semi": "off",
    "curly": "off",
    "eqeqeq": "off",
    "no-throw-literal": "off",
    "semi": "off"
  },
  "ignorePatterns": [
    "dist",
    "**/*.d.ts"
  ]
}

