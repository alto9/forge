{
  "name": "forge-monorepo",
  "version": "1.0.1",
  "private": true,
  "description": "Forge - Context Engineering Add-on for VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/alto9/forge"
  },
  "bugs": {
    "url": "https://github.com/alto9/forge/issues"
  },
  "homepage": "https://github.com/alto9/forge#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "compile": "npm run compile --workspaces",
    "watch": "npm run watch --workspaces --if-present",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules packages/*/node_modules",
    "vscode:package": "cd packages/vscode-extension && npm run package && npx --yes @vscode/vsce package --no-dependencies",
    "release:dry-run": "semantic-release --dry-run",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^8.0.0",
    "semantic-release": "^25.0.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.14.0",
    "npm": ">=10.0.0"
  }
}
